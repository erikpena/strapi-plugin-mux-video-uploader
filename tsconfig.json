{
  "extends": "@strapi/typescript-utils/tsconfigs/admin",

  "compilerOptions": {
    "target": "es2021",
    "module": "Preserve",
    // "moduleResolution": "node",
    "outDir": "./dist",
    "noEmit": false,
  },

  "include": [
    "types",
    "admin",
    "server",
    "strapi-admin.ts",
    "strapi-server.ts",
    // Include JSON files in dist (for translations)
    "server/**/*.json",
    "admin/**/*.json"
  ],

  "exclude": [
    "node_modules/",

    // Do not include test files
    "**/*.test.ts"
  ]
}
